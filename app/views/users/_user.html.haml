%tr[user]
  %td= image_tag(user.image.url.to_s, class: 'img-circle')
  %td= user.name
  %td= user.surnames
  %td= user.phone
  %td= user.address
  %td
    = link_to edit_user_path(user), remote: true, title: 'Edit user' do
      %i.fa.fa-pencil
    = link_to user_path(user), method: :delete, remote: true, data: {confirm: 'Are you sure?'}, title: 'Delete user' do
      %i.fa.fa-trash
